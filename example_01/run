#!/usr/bin/env bash

################################
#     Example 01 - $PATH       #
################################

# NOTE: we have `testing` and `git` binaries in the bin folder

# ONE

# do not modify the path

# TWO

# Add our directory to the end of the PATH
#PATH=$PATH:/Users/mario/Work/ruby_loading/example_01/bin

# THREE
# Add our directory to the start of the PATH
#PATH=/Users/mario/Work/ruby_loading/example_01/bin:${PATH}

echo "PATH: ${PATH}"
echo "testing: $(which testing)"
echo "git: $(which git)"
